@page "/counter/{start:int?}"
@inject NavigationManager navHelper;
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @start</p>

<button class="btn btn-primary" @onclick="IncrementCount">+</button>
<button class="btn btn-primary" @onclick="DecrementCount">-</button>

<a href="javascript:void(0)" @onclick="GoHome">Go Home</a>
@code {

    [Parameter]
    public int start{get;set;}
    private int currentCount;

    private void IncrementCount()
    {
        start++;
    }

    private void DecrementCount()
    {
        start--;
    }

    private void GoHome()
    {
        navHelper.NavigateTo("/");
    }
}
